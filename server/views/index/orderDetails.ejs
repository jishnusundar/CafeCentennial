<% include ../partials/header.ejs %>


    <div class="row">
        <div class="large-8 columns large-centered text-center">
        <div class="login-box">
         <div class="inner-login-box">
         
       
    
         <h5>PREVIEW ORDER</h5>
         <br/>
         <form class="form-horizontal" method="post" action="">
              <div class="form-group">
                <label>Order # : </label>
                <label><%= order._id %></label>
              </div>
            
              <div class="form-group">
                <label>Order Placed : </label>
                <label><%= order.creationDate %></label>
              </div>
          

              <div class="form-group">
                <label>Sub Total : </label>
                <label><%= order.subTotal %></label>
              </div>
            
              <div class="form-group">
                <label>Taxes : <%= order.taxes %></label>
              </div>

               <div class="form-group">
                <label>Grand Total : <%= order.grandTotal %></label>
                <label>xx.xx</label>
              </div>


             <div class="form-group">
                <a class="white-color" href="#" data-toggle="collapse" data-target="#demo">See items in this order<span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></a>
              </div>
              <div id="demo" class="collapse">
              <hr class="white-color">
              <% for(var i=0; i<order.items.length; i++) { %>
              <div class="items-box">

               <div class="form-group">
                <label for="" class="col-sm-4">Item</label>
                <div class="col-sm-8"> <label><%= order.items[i].itemName %></label></div>
             </div>

               <div class="form-group">
                <label for="" class="col-sm-4">Price</label>
                <div class="col-sm-8"> <label><%= order.items[i].itemPrice %></label></div>
             </div>

             <div class="form-group">
                <label for="" class="col-sm-4">Qty</label>
                <div class="col-sm-8"> <label><%= order.items[i].itemCount %></label></div>
             </div>

             <div class="form-group">
                <label for="" class="col-sm-4">Note</label>
                <div class="col-sm-8"> <label><%= order.items[i].itemText %></label></div>
             </div>
            
           
             </div><!--row-->
            <hr class="white-color">
             <% } %>
             </div><!--demo-->
              
             
            </form>

            </div>
            </div>
            </div>
            </div>


<% include ../partials/footer.ejs %>