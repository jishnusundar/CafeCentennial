<% include ../partials/header.ejs %>

<div class="main-layout-box">

    <div class="inner-layout-box">


      <div class="row">
      <div class="my-heading">Active Orders</div>
      <hr class="style-one">
      </div>


        <div class="row">
          <% for(var i=0; i<recurringOrders.length; i++) { %>
        <div class="table-responsive">   
        <table class="table table-hover">
            <thead>
            <tr>
                <td><strong>Order #</strong></td><td><%= recurringOrders[i]._id %></td>
                <td><strong>Date:</strong></td><td><%= recurringOrders[i].creationDate %></td>
                 <td><strong>Total:</strong></td><td><%= recurringOrders[i].grandTotal %></td>
                <td><strong>Delete Order</strong>&nbsp;<a href="<%= "/deleteRecurringOrder/" +recurringOrders[i]._id  %>" title="Discontinue this Order"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
            </tr>
            </thead>
            <tbody>
           
            <tr>
                <td><a href="#" data-toggle="collapse" data-target="<%= "#"+ recurringOrders[i]._id %>"><strong>View Items</strong></a></td>
                <td></td>
                 <td></td>
                  <td></td>
                   <td></td>
                    <td></td>
                    <td></td>
            </tr>
         
            </tbody>
        </table>

       <%  for(var n=0; n< recurringOrders[i].items.length; n++ ) { %>
        <div id="<%= recurringOrders[i]._id %>" class="collapse">
         <table class="table table-striped">
                        <tr class="alert alert-success" role="alert">
                        <td class="alert-link">Name:</td><td><%= recurringOrders[i].items[n].itemName %></td>
                        <td class="alert-link">Price:</td><td>$<%= recurringOrders[i].items[n].itemPrice %></td>
                        <td class="alert-link">Quantity:</td><td><%= recurringOrders[i].items[n].itemCount %></td>
                        <td class="alert-link">Note:</td><td><%= recurringOrders[i].items[n].itemText %></td>
                        <td class="alert-link"></td><td></td>
                        </tr>
                        <% } %>
                        <tr>
                        <td class="my-heading2">Mon@</td><td><%= recurringOrders[i].mondayAt %></td>
                        <td class="my-heading2">Tues@</td><td><%= recurringOrders[i].tuesdayAt %></td>
                        <td class="my-heading2">Wed@</td><td><%= recurringOrders[i].wednesdayAt %></td>
                        <td class="my-heading2">Thurs@</td><td><%= recurringOrders[i].thursdayAt %></td>
                        <td class="my-heading2">Fri@</td><td><%= recurringOrders[i].fridayAt %></td>
                        </tr>
                        
                        </table>
                    </div>
            
        </div>
          <% } %>
        </div>   


      </div><!--inner layout box-->

    </div><!--main layout box-->

<% include ../partials/footer.ejs %>